<% if @item.errors.any? %>
  <div style="background: red; color: #fff; padding: 1em;">
    <% @item.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>


<%= form_for([@item_type, @item]) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :item_type_id %>
    <p>This is going to be a <%= @item_type.name %></p>
  </div>

  <div>
    <%= f.label :completed_on %>
    <%= f.date_select :completed_on, include_blank: true %>
  </div>

  <div>
    <%= f.submit 'Save me!' %>
  </div>

<% end %>
