<h1>My Personal Library</h1>

<p><%= link_to 'New item', new_item_path %></p>

<% @items.each do |item| %>
  <h3>
    <%= item.item_type_name %>:
    <%= item.title %>
  </h3>

  <p><%= link_to 'Edit me!', edit_item_path(item) %></p>

  <% if item.completed? %>
    <p>This has been completed.</p>
  <% else %>
    <p>Still need to read or watch it.</p>
  <% end %>

  <% if item.image_url.present? %>
    <%= image_tag item.image_url, alt: "Image for #{item.title}" %>
  <% end %>
<% end %>
